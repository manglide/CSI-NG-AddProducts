<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="5sp">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/individual_product_reviewed"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="10dip"
        android:textColor="#232020"
        android:textStyle="bold"
        android:textSize="20sp"
        android:typeface="sans"
        android:visibility="visible"
        android:gravity="fill_horizontal"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/viewreview"
        android:layout_toStartOf="@+id/viewreview" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/review_delete_button"
            android:layout_marginRight="5sp"
            android:layout_alignParentEnd="true"
            android:background="@android:drawable/btn_dialog" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewreview"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/review_delete_button"
            android:textColor="#df2424"
            android:shadowColor="#b02626"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:textSize="12sp"
            android:width="55sp"
            android:typeface="sans" />-->

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleY=".5"
            android:scaleX=".5"
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/viewreview"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:isIndicator="true"
            android:max="5"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/review_delete_button"
            android:textColor="#df2424"
            android:shadowColor="#b02626"
            android:layout_marginTop="15sp"
            android:layout_marginRight="5sp"
            android:textSize="12sp"
            android:width="55sp"
            android:typeface="sans"
            android:theme="@style/RatingBar"
            android:foreground="#f90606" />


    </RelativeLayout>
</LinearLayout>